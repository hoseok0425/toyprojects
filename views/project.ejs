<%- include('partials/header') %>

    <h1 class="mb-4">
        <%= project.title %>
    </h1>
    <p>
        <%= project.description %>
    </p>
    <p>작성일: <%= new Date(project.created_at).toLocaleDateString() %>
    </p>

    <div class="mt-4">
        <h2>프로젝트 미리보기</h2>
        <iframe src="/projects/<%= project.id %>/index.html" width="100%" height="500px"
            style="border: 1px solid #ddd;"></iframe>
    </div>

    <a href="/" class="btn btn-secondary mt-3">목록으로 돌아가기</a>

    <%- include('partials/footer') %>